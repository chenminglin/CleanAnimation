<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/clean_view_theme"

    android:visibility="gone"
    tools:visibility="visible"
    >
    <com.chenminglin.cleananimation.CleanCircleRippleView
        android:id="@+id/rippleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/layout_trophy"
        android:layout_width="130dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/trophy"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:src="@drawable/trophy" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/trophy"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/trophy"
            android:src="@drawable/star"
            android:visibility="gone"
            tools:visibility="visible"/>


        <ImageView
            android:id="@+id/star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@id/trophy"
            android:layout_toRightOf="@id/trophy"
            android:src="@drawable/star"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="-10dp"
            android:layout_toRightOf="@id/trophy"
            android:layout_alignTop="@id/trophy"
            android:src="@drawable/star"
            android:visibility="gone"
            tools:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_clean_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@id/layout_trophy"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="完成清理，手机很干净"/>



</RelativeLayout>